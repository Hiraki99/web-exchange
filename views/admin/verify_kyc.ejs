<script>
    Pace.track(function () {
        $.ajax({
            headers: {
                "x-access-token": localStorage.getItem("token")
            },
            type: 'POST', // define the type of HTTP verb we want to use (POST for our form)
            url: '/admin/all-kyc', // the url where we want to POST

            dataType: 'json', // what type of data do we expect back from the server
            // encode          : true
        }).done(function (data) {
            data = JSON.parse(data)
            console.log(data)
            data.kyc.forEach(item => {
                item["datetime"] = formatDate(item["createAt"]);
            });
            var template = $('#listkyc').html();
            var strVar = Mustache.render(template, data);

            $('#all-kyc >tbody').html(strVar)
            $('#all-kyc').DataTable({
                "pagingType": "full_numbers",
                "bLengthChange": false,
                "searching": false
            });
        });
    });

    function verify(e) {
        var error = getError()
        var data = {
            "id": $(e).data("id_kyc"),
            "field_error": error
        }
        if (error != "") data["status"] = 2
        else data["status"] = 1


        Pace.track(function () {

            $.ajax({
                headers: {
                    "x-access-token": localStorage.getItem("token")
                },
                type: 'POST', // define the type of HTTP verb we want to use (POST for our form)
                url: '/admin/verify-kyc', // the url where we want to POST
                data: data, // our data object
                dataType: 'json', // what type of data do we expect back from the server
                // encode          : true
            }).done(function (data) {
                if (data.status == 1) {
                    console.log($(e).data("id_kyc"))
                    console.log("#button_" + $(e).data("id_kyc"))
                    $("#button_" + $(e).data("id_kyc")).parent().parent().remove()
                    $("#detailInfoKyc").modal("hide")
                }
            });

        });


    }
</script>