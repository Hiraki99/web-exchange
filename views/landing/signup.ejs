<% layout ("../layout/layout_landing_page") -%>

        <link rel="stylesheet" href="/css/pace-theme-minimal.css" />
        <div class="container-fluid user-auth">
            <div class="hidden-xs col-sm-4 col-md-4 col-lg-4">
                <!-- Logo Starts -->
                <a class="logo" href="/">
                    <img class="img-responsive" src="/images/logo-trex-white.png" alt="logo" style='width: 161px;'>
                </a>
                <!-- Logo Ends -->
                <!-- Slider Starts -->
                <div id="carousel-testimonials" class="carousel slide carousel-fade" data-ride="carousel">
                    <!-- Indicators Starts -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-testimonials" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-testimonials" data-slide-to="1"></li>
                        <li data-target="#carousel-testimonials" data-slide-to="2"></li>
                    </ol>
                    <!-- Indicators Ends -->
                    <!-- Carousel Inner Starts -->
                    <div class="carousel-inner">
                        <!-- Carousel Item Starts -->
                        <div class="item active item-1">
                            <div>
                                <blockquote>
                                    <p>This is a realistic program for anyone looking for site to invest. Paid to me regularly, keep up good work!</p>
                                    <footer><span>Lucy Smith</span>, England</footer>
                                </blockquote>
                            </div>
                        </div>
                        <!-- Carousel Item Ends -->
                        <!-- Carousel Item Starts -->
                        <div class="item item-2">
                            <div>
                                <blockquote>
                                    <p>Bitcoin doubled in 7 days. You should not expect anything more. Excellent customer service!</p>
                                    <footer><span>Slim Hamdi</span>, Tunisia</footer>
                                </blockquote>
                            </div>
                        </div>
                        <!-- Carousel Item Ends -->
                        <!-- Carousel Item Starts -->
                        <div class="item item-3">
                            <div>
                                <blockquote>
                                    <p>My family and me want to thank you for helping us find a great opportunity to make money online. Very happy with how things are going!</p>
                                    <footer><span>Dalel Boubaker</span>, Russia</footer>
                                </blockquote>
                            </div>
                        </div>
                        <!-- Carousel Item Ends -->
                    </div>
                    <!-- Carousel Inner Ends -->
                </div>
                <!-- Slider Ends -->
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                <!-- Logo Starts -->
                <a class="visible-xs" href="/">
                    <img class="img-responsive mobile-logo" src="/images/logo-trex-white.png" alt="logo" style='width: 161px;'>
                </a>
                <!-- Logo Ends -->
                <div class="form-container">
                    <div>
                        <%if (error) { %>
                            <div class="row text-center">
                                <h2 class="title-head hidden-xs" id='title_signup'><span>Error</span></h2>
                                    <p id='content_signup' class="info-form"><%= error %>
                                    <a onclick='resend(this)' style='cursor:pointer' data-mail='<%= email %>'><span>Resend Email Active Here!</span></a> 
                                    </p>
                            </div>
                        <% }else{ %>
                            
                            <div class="row text-center">
                                <h2 class="title-head hidden-xs" id='title_signup'>get <span>started</span></h2>
                                    <p class="info-form" id='content_signup'>Open account for free and start trading Bitcoins now!</p>
                            </div>
                            
                            <form id='signup_form' methods='POST'>
                                
                                <div class="form-group">
                                    <p id='message_signup_error' style='color:#ca1645;display:none'></p>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" name="name" id="username" placeholder="USERNAME" type="text" required>
                                </div>
                              
                                <div class="form-group">
                                    <input class="form-control" name="email" id="email" placeholder="EMAIL" type="email" required>
                                </div>
                                
                                <div class="form-group">
                                    <input class="form-control" name="password" id="password" oninput="checkValiPassword()" placeholder="PASSWORD" type="password" required>
                                    <span id='noti-password' ></span>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" oninput="checkConfirmPassword()" onblur="unForcusConfirmPass()"  name="confirm-password" id="confirm-password" placeholder="CONFIRM PASSWORD" type="password" required>
                                    <span id='noti-confirm-password' ></span>
                                </div>
                                <div class="form-group">
                                    <div class="g-recaptcha" data-sitekey="6LcyoV8UAAAAALld8maslgJOUTQO4PBbG_FTdMaY"></div>
                                </div>
                                <div class="form-group">
                                    <input class="" name="confirm-rule" id="confirm-rule" style="position: inherit;height: 15px;width: 15px;" type="checkbox" required> I agreed with the <a href="" style="text-decoration: underline;">Term & Agreement</a>
                                </div>
                                
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit">create account</button>
                                    <p class="text-center">already have an account ? <a onclick="getPage('/login')">Login</a>
                                </div>
                                
                            </form>
                          
                        <%} %>
                        
                    </div>
                </div>
                <!-- Copyright Text Starts -->
                <p class="text-center copyright-text">T-Rex Â© 2018 T-Rex Exchange Cryptocurrency</p>
                <!-- Copyright Text Ends -->
            </div>
        </div>
        <script src='/js/front_end/landing/login.js?v=1111'></script>